<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chethankumar.englishdictionary.MainActivity"
    android:background="#0097A7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English Dictionary"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="34sp"
        android:id="@+id/zaire_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button"
        android:onClick="showZaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dip"
        android:background="#FFFFFF"

        android:text="Get The Meaning Of A Word"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/button3"
        android:onClick="showZaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dip"
        android:background="#FFFFFF"

        android:text="Text To Speech"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/bookmarkBut"
        android:onClick="showZaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dip"
        android:background="#FFFFFF"

        android:text="Bookmarks"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/historyBut"
        android:onClick="showZaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dip"
        android:background="#FFFFFF"

        android:text="History"
        android:textStyle="bold"/>



    <Button
        android:id="@+id/button4"
        android:onClick="showZaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dip"
        android:background="#FFFFFF"

        android:text="Speech To Text"
        android:textStyle="bold"/>


</LinearLayout>
